                  {link.icon === "instagram" && (
                    <path d="M12.017 0C8.396 0 7.996.014 6.79.067 5.583.12 4.775.302 4.082.559c-.726.275-1.34.64-1.95 1.25-.61.61-.975 1.224-1.25 1.95C.802 4.775.62 5.583.567 6.79.514 7.996.5 8.396.5 12.017s.014 4.021.067 5.227c.053 1.207.235 2.015.492 2.708.275.726.64 1.34 1.25 1.95.61.61 1.224.975 1.95 1.25.693.257 1.501.439 2.708.492 1.206.053 1.606.067 5.227.067s4.021-.014 5.227-.067c1.207-.053 2.015-.235 2.708-.492.726-.275 1.34-.64 1.95-1.25.61-.61.975-1.224 1.25-1.95.257-.693.439-1.501.492-2.708.053-1.206.067-1.606.067-5.227s-.014-4.021-.067-5.227c-.053-1.207-.235-2.015-.492-2.708-.275-.726-.64-1.34-1.25-1.95-.61-.61-1.224-.975-1.95-1.25C19.225.302 18.417.12 17.21.067 16.004.014 15.604 0 12.017 0zm0 1.802c3.538 0 3.958.013 5.357.066 1.37.052 2.115.29 2.625.483.652.247 1.118.542 1.607.978.489.436.784.902.978 1.607.193.51.431 1.255.483 2.625.053 1.399.066 1.819.066 5.357s-.013 3.958-.066 5.357c-.052 1.37-.29 2.115-.483 2.625-.247.652-.542 1.118-.978 1.607-.436.489-.902.784-1.607.978-.51.193-1.255.431-2.625.483-1.399.053-1.819.066-5.357.066s-3.958-.013-5.357-.066c-1.37-.052-2.115-.29-2.625-.483-.652-.247-1.118-.542-1.607-.978-.489-.436-.784-.902-.978-1.607-.193-.51-.431-1.255-.483-2.625-.053-1.399-.066-1.819-.066-5.357s.013-3.958.066-5.357c.052-1.37.29-2.115.483-2.625.247-.652.542-1.118.978-1.607.436-.489.902-.784 1.607-.978.51-.193 1.255-.431 2.625-.483 1.399-.053 1.819-.066 5.357-.066zm0 2.718c-3.623 0-6.535 2.912-6.535 6.535s2.912 6.535 6.535 6.535 6.535-2.912 6.535-6.535-2.912-6.535-6.535-6.535zm0 10.788c-2.94 0-5.323-2.383-5.323-5.323s2.383-5.323 5.323-5.323 5.323 2.383 5.323 5.323-2.383 5.323-5.323 5.323zm8.334-11.304c0 .836-.676 1.512-1.512 1.512s-1.512-.676-1.512-1.512.676-1.512 1.512-1.512 1.512.676 1.512 1.512z" />
