---
// Gallery component that displays images from public/images/gallery/
// with reduced opacity and smooth hover transformation

const galleryImages = [1, 2, 3, 4, 5, 6, 7, 8];
---

<section class="py-16 bg-stone-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-stone-800 mb-4">
        Galería de Imágenes
      </h2>
      <p class="text-lg text-stone-600">
        Momentos capturados en nuestro viaje musical
      </p>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      {
        galleryImages.map((num) => (
          <div class="aspect-square overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300">
            <img
              src={`/images/gallery/${num}.webp`}
              alt={`Imágen de galería ${num}`}
              class="w-full h-full object-cover opacity-100 md:opacity-50 md:hover:opacity-100 md:hover:scale-105 transition-all duration-300"
            />
          </div>
        ))
      }
    </div>
  </div>
</section>
