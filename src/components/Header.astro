---
const navItems = [
  { name: "Home", href: "/" },
  { name: "Biografía", href: "/biografia" },
  { name: "Discografía", href: "/discografia" },
  { name: "Giras", href: "/giras" },
  { name: "Multimedia", href: "/multimedia" },
  { name: "Contacto", href: "/social" },
];
---

<header class="bg-white shadow-sm sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center py-4">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a
          href="/"
          class="text-2xl font-bold text-stone-800 hover:text-stone-600 transition-colors"
        >
          Of Monsters and Men
        </a>
      </div>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex space-x-8">
        {
          navItems.map((item) => (
            <a href={item.href} class="nav-link">
              {item.name}
            </a>
          ))
        }
      </nav>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button
          id="mobile-menu-button"
          class="text-stone-600 hover:text-stone-900 focus:outline-none focus:text-stone-900"
          aria-label="Toggle menu"
        >
          <svg class="h-6 w-6 fill-current" viewBox="0 0 24 24">
            <path
              fill-rule="evenodd"
              d="M4 5h16a1 1 0 0 1 0 2H4a1 1 0 1 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2z"
            ></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <nav class="flex flex-col space-y-2">
        {
          navItems.map((item) => (
            <a href={item.href} class="nav-link py-2 border-b border-stone-200">
              {item.name}
            </a>
          ))
        }
      </nav>
    </div>
  </div>
</header>

<script>
  // Simple mobile menu toggle
  const button = document.getElementById("mobile-menu-button");
  const menu = document.getElementById("mobile-menu");

  if (button && menu) {
    button.addEventListener("click", () => {
      menu.classList.toggle("hidden");
    });
  }
</script>
