---
const navItems = [
  { name: "Home", href: "/" },
  { name: "Biografía", href: "/biografia" },
  { name: "Discografía", href: "/discografia" },
  { name: "Giras", href: "/giras" },
  { name: "Multimedia", href: "/multimedia" },
  { name: "Contacto", href: "/social" },
];
---

<header class="bg-white shadow-sm fixed top-0 z-[100] w-full">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center py-4">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a
          href="/"
          class="text-2x md:text-2xl font-bold text-stone-800 hover:text-stone-600 transition-colors"
        >
          Of Monsters and Men
        </a>
      </div>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex space-x-8">
        {
          navItems.map((item) => (
            <a href={item.href} class="nav-link">
              {item.name}
            </a>
          ))
        }
      </nav>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button
          id="mobile-menu-button"
          class="bg-stone-800 hover:bg-stone-700 text-white p-3 rounded-full transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-stone-500 focus:ring-offset-2 shadow-lg"
          aria-label="Toggle menu"
        >
          <svg
            class="h-5 w-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div
      id="mobile-menu"
      class="hidden md:hidden overflow-hidden transition-all duration-300 ease-in-out"
    >
      <nav
        class="flex flex-col space-y-1 pt-2 pb-4 border-t border-stone-200 mt-4"
      >
        {
          navItems.map((item) => (
            <a
              href={item.href}
              class="nav-link py-3 px-4 rounded-lg hover:bg-stone-50 transition-colors duration-200 text-stone-700 hover:text-stone-900 font-medium"
            >
              {item.name}
            </a>
          ))
        }
      </nav>
    </div>
  </div>
</header>

<script>
  // Enhanced mobile menu toggle with smooth animations
  const button = document.getElementById("mobile-menu-button");
  const menu = document.getElementById("mobile-menu");

  if (button && menu) {
    button.addEventListener("click", () => {
      const isHidden = menu.classList.contains("hidden");

      if (isHidden) {
        // Show menu
        menu.classList.remove("hidden");
        menu.style.maxHeight = "0px";
        // Force reflow
        menu.offsetHeight;
        menu.style.maxHeight = menu.scrollHeight + "px";
      } else {
        // Hide menu
        menu.style.maxHeight = "0px";
        menu.addEventListener("transitionend", function hideMenu() {
          menu.classList.add("hidden");
          menu.style.maxHeight = "";
          menu.removeEventListener("transitionend", hideMenu);
        });
      }
    });
  }
</script>
