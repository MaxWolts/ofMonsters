---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const socialLinks = [
  {
    name: "Spotify",
    url: "https://open.spotify.com/artist/ofmonstersandmen",
    icon: "spotify",
    hoverText: "Escucha nuestro catálogo completo",
    color: "hover:text-white",
    bgHover: "hover:bg-green-500"
  },
  {
    name: "Instagram",
    url: "https://instagram.com/ofmonstersandmen",
    icon: "instagram",
    hoverText: "Síguenos en Instagram",
    color: "hover:text-white",
    bgHover: "hover:bg-gradient-to-br hover:from-pink-500 hover:to-purple-600"
  },
  {
    name: "Facebook",
    url: "https://facebook.com/ofmonstersandmen",
    icon: "facebook",
    hoverText: "Conéctate en Facebook",
    color: "hover:text-white",
    bgHover: "hover:bg-blue-600"
  },
  {
    name: "X (Twitter)",
    url: "https://x.com/monstersandmen",
    icon: "twitter",
    hoverText: "Síguenos en X",
    color: "hover:text-white",
    bgHover: "hover:bg-gray-800"
  },
  {
    name: "YouTube",
    url: "https://www.youtube.com/channel/UC-hZDis8Dbfk8FotKkOXyQQ",
    icon: "youtube",
    hoverText: "Mira nuestros videos",
    color: "hover:text-white",
    bgHover: "hover:bg-red-600"
  }
];
---

<Layout>
  <Header />

  <!-- Full Screen Background Section -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden mt-20 md:mt-16">
    <!-- Background Image -->
    <img
      src="https://placehold.co/1920x1080/1A1A1A/FFFFFF/png?text=Paisaje+Nordico+OMAM"
      alt="Paisaje oscuro y natural que evoca la estética de Of Monsters and Men."
      class="absolute inset-0 w-full h-full object-cover z-0"
    />

    <!-- Dark Overlay -->
    <div class="absolute inset-0 bg-[url('/images/contact.webp')] bg-cover z-10"></div>

    <!-- Content -->
    <div class="relative z-20 text-center px-4 sm:px-6 lg:px-8 max-w-6xl mx-auto">
      <!-- Main Title -->
      <h1 class="text-5xl md:text-7xl lg:text-8xl font-bold text-white mb-16 drop-shadow-2xl font-serif">
        Encuéntranos en el Viaje
      </h1>

      <!-- Social Icons Grid -->
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-8 md:gap-12 lg:gap-16 mb-16">
        {socialLinks.map((social) => (
          <a
            href={social.url}
            target="_blank"
            rel="noopener noreferrer"
            class={`group relative flex flex-col items-center justify-center p-6 rounded-full bg-white bg-opacity-10 backdrop-blur-sm border border-white border-opacity-20 transition-all duration-500 transform hover:scale-110 hover:rotate-3 no-underline ${social.bgHover}`}
            title={social.hoverText}
          >
            <!-- Icon -->
            <div class={`w-16 h-16 md:w-20 md:h-20 lg:w-24 lg:h-24 mb-4 transition-all duration-500 ${social.color}`}>
              {social.icon === "spotify" && (
                <svg viewBox="0 0 24 24" fill="currentColor" class="w-full h-full text-gray-800 transition-colors duration-300 group-hover:text-amber-50">
                  <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.6 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.6-.12-.421.18-.78.6-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.241 1.081zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.42-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.781-.18-.601.18-1.2.78-1.381 4.5-1.301 11.64-1.021 15.96 1.62.559.301.72 1.2.36 1.68-.302.421-.962.54-1.322.24z"/>
                </svg>
              )}
              {social.icon === "instagram" && (
                <svg viewBox="0 0 24 24" fill="currentColor" class="w-full h-full text-gray-800 transition-colors duration-300 group-hover:text-amber-50">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              )}
              {social.icon === "facebook" && (
                <svg viewBox="0 0 24 24" fill="currentColor" class="w-full h-full text-gray-800 transition-colors duration-300 group-hover:text-amber-50">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              )}
              {social.icon === "twitter" && (
                <svg viewBox="0 0 24 24" fill="currentColor" class="w-full h-full text-gray-800 transition-colors duration-300 group-hover:text-amber-50">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
              )}
              {social.icon === "youtube" && (
                <svg viewBox="0 0 24 24" fill="currentColor" class="w-full h-full text-gray-800 transition-colors duration-300 group-hover:text-amber-50">
                  <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                </svg>
              )}
            </div>

            <!-- Platform Name -->
            <span class="text-gray-800 group-hover:text-white text-sm md:text-base font-medium group-hover:opacity-100 transition-opacity duration-300 transform translate-y-2 group-hover:translate-y-0">
              {social.name}
            </span>

            <!-- Hover Text -->
            <div class="absolute -bottom-12 left-1/2 transform -translate-x-1/2 opacity-0 group-hover:opacity-100 transition-all duration-300 pointer-events-none">
              <div class="bg-white bg-opacity-90 text-stone-800 px-3 py-1 rounded-lg text-xs md:text-sm font-medium whitespace-nowrap shadow-lg border-0">
                {social.hoverText}
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <Footer />
</Layout>
