---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Carousel from "../components/Carousel.astro";
import Footer from "../components/Footer.astro";

const popularVideos = [
  {
    videoId: "ghb6eDopW8I",
    title: "Little Talks",
    description:
      "Nuestro sencillo más exitoso con más de 500 millones de reproducciones",
  },
  {
    videoId: "0gEVaniPOmU",
    title: "Mountain Sound",
    description:
      "Un viaje a través de los paisajes islandeses que inspiraron la canción",
  },
  {
    videoId: "mCHUw7ACS8o",
    title: "Dirty Paws",
    description:
      "La energía contagiosa de nuestro debut que conquistó el mundo",
  },
  {
    videoId: "XUClIslXKZo",
    title: "Crystals",
    description: "La evolución sonora de Crystals en imágenes épicas",
  },
];
---

<Layout>
  <Header />

  <!-- Hero Carousel -->
  <Carousel />

  <!-- News Section -->
  <section class="py-16 bg-stone-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-4xl md:text-5xl font-bold text-stone-800 mb-4">
          El Bosque de Canciones
        </h2>
        <p class="text-xl text-stone-600 max-w-2xl mx-auto">
          Mantente al día con nuestros ultimos lanzamientos
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {
          popularVideos.map((video) => (
            <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
              <div class="relative aspect-video">
                <iframe
                  class="w-full h-full"
                  src={`https://www.youtube.com/embed/${video.videoId}?rel=0&modestbranding=1`}
                  title={`YouTube video: ${video.title}`}
                  frameborder="0"
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                  allowfullscreen
                  loading="lazy"
                />
              </div>
              <div class="p-6">
                <h3 class="text-xl font-bold text-stone-800 mb-2">
                  {video.title}
                </h3>
                <p class="text-stone-600 leading-relaxed">
                  {video.description}
                </p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Call to Action Section -->
  <section class="py-16 bg-stone-800 text-stone-100">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">
        Descubre Nuestra Música
      </h2>
      <p class="text-xl mb-8 text-stone-300">
        Explora nuestra discografía completa y sumérgete en el mundo sonoro de
        Of Monsters and Men
      </p>
      <a href="/discografia" class="btn-primary inline-block">
        Explorar Discografía
      </a>
    </div>
  </section>

  <Footer />
</Layout>
