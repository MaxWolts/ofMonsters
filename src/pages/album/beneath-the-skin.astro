    year={albumData.year}
    coverPlaceholderUrl={albumData.coverPlaceholderUrl}
    coverAltText={albumData.coverAltText}
    reviewText={albumData.reviewText}
    tracklist={albumData.tracklist}
    featuredTrack={albumData.featuredTrack}
    videoPlaceholderUrl={albumData.videoPlaceholderUrl}
    videoAltText={albumData.videoAltText}
    urlSongs={albumData.urlSongs}
    totalLength={albumData.totalLength}
    bannerUrl={albumData.bannerUrl}
