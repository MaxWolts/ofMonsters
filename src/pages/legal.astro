---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Layout>
  <Header />

  <!-- Main Content -->
  <main class="min-h-screen bg-gray-50 py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Page Title -->
      <header class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
          Avisos Legales y Términos de Uso del Fansite
        </h1>
        <p class="text-lg text-gray-600">
          Última Actualización: 12 de Noviembre de 2025
        </p>
      </header>

      <!-- Table of Contents -->
      <nav
        class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-8"
      >
        <h2 class="text-xl font-semibold text-gray-900 mb-4">
          Tabla de Contenidos
        </h2>
        <ul class="space-y-2">
          <li>
            <a
              href="#terminos"
              class="text-blue-600 hover:text-blue-800 transition-colors duration-200"
            >
              Términos y Condiciones del Servicio
            </a>
          </li>
          <li>
            <a
              href="#privacidad"
              class="text-blue-600 hover:text-blue-800 transition-colors duration-200"
            >
              Política de Privacidad
            </a>
          </li>
        </ul>
      </nav>

      <!-- Terms of Use Section -->
      <section
        id="terminos"
        class="bg-white rounded-lg shadow-sm border border-gray-200 p-8 mb-8"
      >
        <h2 class="text-3xl font-bold text-gray-900 mb-6">
          Términos y Condiciones del Servicio
